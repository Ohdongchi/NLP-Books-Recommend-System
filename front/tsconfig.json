{
  "compilerOptions": {
    "target": "es5",  
    "module": "commonjs",
    "jsx": "react",
    "lib": [
      "ES2015","ES6","ESNext", "DOM"
    ],
    "strict": true,                               
    
    "moduleResolution": "node",                  
    "esModuleInterop": true,                      
    "skipLibCheck": true,                         
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
